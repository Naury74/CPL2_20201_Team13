        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/senior_checkbox_skyblue"
        android:elevation="5dp"
        android:id="@+id/btn_here"
        android:clickable="true"
        android:onClick="onClick_Hall"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.86"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintWidth_percent="0.28"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="1dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="매장"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHeight_percent="0.65"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/ic_senior_shop"
            />

    </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintHeight_percent="0.13"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/senior_checkbox_green"
            android:elevation="5dp"
            android:id="@+id/btn_takeout"
            android:clickable="true"
            android:onClick="onClick_TakeOut"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintVertical_bias="0.86"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintWidth_percent="0.28"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="1dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="포장"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHeight_percent="0.65"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/ic_senior_packing"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

