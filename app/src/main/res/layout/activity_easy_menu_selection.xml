<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/senior_main_background"
    tools:context=".Activity.EasyMenuSelectionActivity">
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="470dp"
    android:layout_gravity="center"
    android:padding="30dp"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:layout_marginTop="5dp"
    android:id="@+id/menu_type_recyclerview" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/voice_btn1"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="180dp"
        android:text=" "
        android:clickable="true"/>

    <TextView
        android:id="@+id/what_do_you_need"
        android:text="무엇이 필요하신가요?\n아래처럼 말씀해주세요."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="normal" />
</LinearLayout>

    <TextView
        android:id="@+id/voice_recordText1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:text="'커피'"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"/>

</LinearLayout>