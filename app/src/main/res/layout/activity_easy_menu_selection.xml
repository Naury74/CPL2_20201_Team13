<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/senior_background_mike"
    android:orientation="vertical"
    tools:context=".Activity.EasyMenuSelectionActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원하시는 "
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종류"
            android:textColor="@color/red"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="를 선택해주세요"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/menu_type_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="35dp"
        android:padding="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="82dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아래 버튼을 눌러 아래처럼 말씀해보세요"
            android:layout_gravity="center"
            android:id="@+id/what_do_you_need"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="95dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp">
        <TextView
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:id="@+id/voice_recordText1"
            android:text="빵"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/voice_btn1"
                android:layout_width="140dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="22dp"
                android:layout_marginRight="35dp"
                android:text=" "
                android:clickable="true"
                ></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="53dp">
            <TextView
                android:id="@+id/voice_recordText2"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:text="커피"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
   </LinearLayout>
