<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/selected_item_background">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/menuName"
        android:background="@null"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintWidth_percent="0.36"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        />
    
    <ImageButton
        android:id="@+id/minusButton"
        android:src="@drawable/ic_vector_button_minus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.17"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintDimensionRatio="h,1:1"
        />

    <TextView
        android:id="@+id/countView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.245"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintDimensionRatio="h,44:66"
        android:text="1개"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="1dp"
        android:maxLines="1"
        android:gravity="center"
        />

    <ImageButton
        android:id="@+id/plusButton"
        android:src="@drawable/ic_vector_button_plus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.17"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintDimensionRatio="h,1:1"/>

    <TextView
        android:id="@+id/priceView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.23"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintDimensionRatio="h,83:160"
        android:gravity="center"
        android:text="80000"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="1dp"
        android:maxLines="1"
        />

    <Button
        android:id="@+id/deleteButton"
        android:background="@drawable/delete_item_btn"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.23"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintDimensionRatio="h,1:1"
        />

    <TextView
        android:id="@+id/menu_optionView"
        android:text="선택"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.83"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintDimensionRatio="h,55:234"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="1dp"
        android:maxLines="1"
        android:gravity="center"/>

